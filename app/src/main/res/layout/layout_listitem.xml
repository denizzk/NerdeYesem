<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18.5dp"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/parent_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/restaurant_image"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dip"
        android:layout_marginEnd="95dip"
        android:layout_toRightOf="@id/restaurant_image"
        android:text="Copacabana Beach"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginRight="95dip"
        android:layout_marginLeft="25dip" />

    <TextView
        android:id="@+id/restaurant_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="245sp"
        android:layout_alignBaseline="@id/restaurant_location"
        android:layout_toRightOf="@id/restaurant_image"
        android:text="3.8"
        android:textColor="#FFF"
        android:padding="10sp"
        android:background="@drawable/rounded_corner"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/restaurant_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_name"
        android:layout_marginLeft="25sp"
        android:layout_toRightOf="@id/restaurant_image"
        android:layout_marginRight="95sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="1 5th Avenue, New York, NY"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/restaurant_cuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/restaurant_image"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="125sp"
        android:layout_toRightOf="@id/restaurant_image"
        android:text="Cafe"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/restaurant_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:gravity="end"
        android:layout_alignBaseline="@id/restaurant_cuisine"
        android:layout_alignRight="@id/restaurant_rating"
        android:layout_toRightOf="@id/restaurant_image"
        android:text="Avg. price: â‚º200000"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#000"
        android:textSize="12sp"
        android:textStyle="normal" />

</RelativeLayout>