<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    tools:context="com.karakaya.deniz.nerdeyesem.activity.FingerprintActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nerde Yesem"
            android:layout_marginBottom="75sp"
            android:textColor="#f5f5f5" />

        <ImageView
            android:id="@+id/imageFinger"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_fingerprint" />

        <TextView
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please place your fingertip on the scanner to verify your identity"
            android:layout_margin="25sp"
            android:ellipsize="end"
            android:textColor="#f5f5f5" />

    </LinearLayout>

</LinearLayout>